{
  "name": "react_messenger",
  "version": "1.0.0",
  "description": "A simple chat messenger app built with React and socket.io",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src --presets env,stage-0\"",
    "build": "babel src -s -D -d dist --presets env,stage-0",
    "start": "node dist",
    "prestart": "npm run -s build",
    "test": "eslint src"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "morgan": "^1.9.0",
    "uws": "^10.148.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.9.0",
    "nodemon": "^1.12.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raphealolams/react_messenger.git"
  },
  "keywords": [
    "Chat",
    "React",
    "websocket",
    "socket.io"
  ],
  "author": "Ajilore Raphael Olamide < raphealolams@gmail.com >",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raphealolams/react_messenger/issues"
  },
  "homepage": "https://github.com/raphealolams/react_messenger#readme"
}
